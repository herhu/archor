{
    "name": "Validation App",
    "crossCutting": {
        "auth": {
            "jwt": {
                "issuer": "https://auth.example.com",
                "audience": "https://api.example.com",
                "jwksUri": "https://auth.example.com/.well-known/jwks.json"
            }
        }
    },
    "domains": [
        {
            "name": "Patient Domain",
            "key": "patient",
            "entities": [
                {
                    "name": "PatientNotification",
                    "primaryKey": "id",
                    "fields": [
                        {
                            "name": "id",
                            "type": "int",
                            "primary": true
                        },
                        {
                            "name": "customerId",
                            "type": "string"
                        },
                        {
                            "name": "priority",
                            "type": "int",
                            "nullable": true
                        },
                        {
                            "name": "meta",
                            "type": "json",
                            "nullable": true
                        },
                        {
                            "name": "enabled",
                            "type": "boolean"
                        }
                    ]
                }
            ],
            "services": [
                {
                    "name": "PatientNotificationService",
                    "route": "notifications",
                    "entity": "PatientNotification",
                    "crud": [
                        "create",
                        "findAll",
                        "findOne",
                        "update",
                        "delete"
                    ],
                    "operations": [
                        {
                            "name": "Toggle",
                            "method": "PATCH",
                            "path": "/toggle",
                            "authz": {
                                "scopesAll": [
                                    "patient:toggle"
                                ]
                            }
                        },
                        {
                            "name": "Status",
                            "method": "GET",
                            "path": "/status",
                            "authz": {
                                "required": false
                            }
                        }
                    ]
                }
            ]
        }
    ]
}