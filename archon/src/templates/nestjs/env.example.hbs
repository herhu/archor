# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{kebab projectName}}

{{#if hasRedis}}
REDIS_HOST=localhost
REDIS_PORT=6379
{{/if}}

# JWT verification
JWT_ISSUER={{jwtIssuer}}
JWT_AUDIENCE={{jwtAudience}}

# Choose ONE verification mode:

# (A) RS256 / OIDC providers (recommended)
JWT_JWKS_URI={{jwtJwksUri}}

# (B) HS256 shared secret (simple internal use)
# JWT_SECRET=supersecret

# Port
PORT=3000